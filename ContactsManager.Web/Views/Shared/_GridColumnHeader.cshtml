@if (ViewBag.SortBy == ViewBag.ColumnName && ViewBag.SortOrder == SortOrder.Asc.ToString())
{
    <th>
        <a href="~/persons/index?searchBy=@ViewBag.SearchBy&searchString=@ViewBag.SearchString&sortBy=@ViewBag.SortBy&sortOrder=@nameof(SortOrder.Asc)">
            @ViewBag.DisplayName
        </a>
        <i class="fa-solid fa-sort-up"></i>
    </th>
}
else if (ViewBag.SortBy == ViewBag.ColumnName && ViewBag.SortOrder == SortOrder.Desc.ToString())
{
    <th>
        <a href="~/persons/index?searchBy=@ViewBag.SearchBy&searchString=@ViewBag.SearchString&sortBy=@ViewBag.SortBy&sortOrder=@nameof(SortOrder.Desc)">
            @ViewBag.DisplayName
        </a>
        <i class="fa-solid fa-sort-down"></i>
    </th>    
}
else
{
    <th>
        <a href="~/persons/index?searchBy=@ViewBag.SearchBy&searchString=@ViewBag.SearchString&sortBy=@ViewBag.SortBy&sortOrder=@nameof(SortOrder.Asc)">
            @ViewBag.DisplayName
        </a>
    </th>
}