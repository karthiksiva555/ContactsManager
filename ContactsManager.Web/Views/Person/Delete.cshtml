@model PersonResponse

@{
    ViewBag.Title = "Delete Person";
}

<a asp-controller="Person" asp-action="Index" class="link-hover">Back to Persons</a>
<h2>Delete Person</h2>

<div class="w-50">
    <form asp-controller="Person" asp-action="Delete" method="post">
        <input type="hidden" asp-for="PersonId"/>
        @* Person Name *@
        <div class="form-field flex">
            <div class="w-25">
                <label asp-for="PersonName" class="form-label pt">Person Name</label>
            </div>
            <div class="flex-1">
                <input asp-for="PersonName" class="form-input" disabled="disabled"/>
                <span asp-validation-for="PersonName" class="text-red"></span>
            </div>
        </div>

        @* Email Address *@
        <div class="form-field flex">
            <div class="w-25">
                <label asp-for="EmailAddress" class="form-label pt">Email Address</label>
            </div>
            <div class="flex-1">
                <input asp-for="EmailAddress" type="email" disabled="disabled"/>
                <span asp-validation-for="EmailAddress" class="text-red"></span>
            </div>
        </div>

        @* Submit *@
        <div class="form-field flex">
            <div class="w-25"></div>
            <div class="flex-1">
                <button class="button button-red-back">Delete</button>
            </div>
        </div>
    </form>
</div>