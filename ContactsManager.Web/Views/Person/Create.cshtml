@{
    ViewBag.Title = "Create Person";
}

<a asp-controller="Person" asp-action="Index" class="link-hover">Back to Persons</a>
<h2>Create Person</h2>

<div class="w-50">
    <form asp-controller="Person" asp-action="Create" method="post">
        @* Person Name *@
        <div class="form-field flex">
            <div class="w-25">
                <label for="PersonName" class="form-label pt">Person Name</label>
            </div>
            <div class="flex-1">
                <input type="text" id="PersonName" name="PersonName" class="form-input"/>
            </div>
        </div>

        @* Email Address *@
        <div class="form-field flex">
            <div class="w-25">
                <label for="EmailAddress" class="form-label pt">Email Address</label>
            </div>
            <div class="flex-1">
                <input type="text" id="EmailAddress" name="EmailAddress" class="form-input"/>
            </div>
        </div>

        @* Date of Birth *@
        <div class="form-field flex">
            <div class="w-25">
                <label for="DateOfBirth" class="form-label pt">Date of Birth</label>
            </div>
            <div class="flex-1">
                <input type="date" id="DateOfBirth" name="DateOfBirth" class="form-input"/>
            </div>
        </div>

        @* Gender *@
        <div class="form-field flex">
            <div class="w-25">
                <label for="Gender" class="form-label pt">Gender</label>
            </div>
            <div class="flex-1">
                <input type="radio" id="Male" name="Gender" value="Male" class="form-input ml"/>
                <label for="Male">Male</label>
                <input type="radio" id="Female" name="Gender" value="Female" class="form-input ml"/>
                <label for="Female">Female</label>
                <input type="radio" id="Other" name="Gender" value="Other" class="form-input ml"/>
                <label for="Other">Other</label>
            </div>
        </div>

        @* Country *@
        <div class="form-field flex">
            <div class="w-25">
                <label for="CountryId" class="form-label pt">Country</label>
            </div>
            <div class="flex-1">
                <select name="CountryId" id="CountryId" class="form-input">
                    <option value="">Please select</option>
                    @foreach (CountryResponse country in ViewBag.Countries)
                    {
                        <option value="@country.CountryId">@country.CountryName</option>
                    }
                </select>
            </div>
        </div>

        @* Submit *@
        <div class="form-field flex">
            <div class="w-25"></div>
            <div class="flex-1">
                <button class="button button-green-back">Submit</button>
                
                @if (ViewBag.Errors != null)
                {
                    <div class="text-red ml">
                        <ul>
                            @foreach (string error in ViewBag.Errors)
                            {
                                <li class="ml">@error</li>
                            }
                        </ul>
                    </div>
                }
            </div>
        </div>
    </form>
</div>